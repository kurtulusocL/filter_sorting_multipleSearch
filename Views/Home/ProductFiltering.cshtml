@model IEnumerable<Filter_Search.Models.Concrete.Product>
@{
    ViewBag.Title = "Product Filtering";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="col-lg-7">
                <table class="table table-hover">
                    <tr>
                        <th>
                            Product Name
                        </th>
                        <th>
                            Status
                        </th>
                        <th>
                            Stock
                        </th>
                        <th>
                            Price
                        </th>
                        <th>
                            Category
                        </th>
                        <th>
                            Country
                        </th>
                        <th>
                            Created At
                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                @item.Status
                            </td>
                            <td>
                                @item.Stock.ToString()
                            </td>
                            <td>
                                @item.Price.ToString()
                            </td>
                            <td>
                                <label class="label label-info">@item.Category.Name</label>
                            </td>
                            <td>
                                <label class="label label-success">@item.Country.Name</label>
                            </td>
                            <td>
                                @item.CreatedDate.ToShortDateString()
                            </td>
                        </tr>
                    }
                </table>
            </div>
            <div class="col-lg-5">
                <form action="/Home/AdvancedSearchResult" method="get">
                    <input type="text" name="key" placeholder="Status" class="form-control" />
                    <hr />
                    <div class="col-md-5">
                        <b>Categories</b>
                        <ul>
                            @{
                                Html.RenderAction("_CategoryList", "Home");
                            }
                        </ul>
                    </div>
                    <div class="col-md-5">
                        <b>Countries</b>
                        <ul>
                            @{
                                Html.RenderAction("_CountryList", "Home");
                            }
                        </ul>
                    </div>
                    <div class="col-md-5">
                        <button type="submit" class="btn btn-success">Search by Filter</button>
                    </div>
                </form>                
            </div>
        </div>
    </div>
</div>
